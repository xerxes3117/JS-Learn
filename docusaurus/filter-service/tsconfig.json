{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["dom", "ES6", "ES2020"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"styles/*": ["./src/styles/*"],
			"components/*": ["./src/components/*"],
			"schemas": ["./src/schemas"]
		},
		"moduleSuffixes": [".ios", ".android", ""]
	},
	"exclude": [
		"babel.config.js",
		"node_modules"
	]
}